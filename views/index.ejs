<%- include('layout') %>
<h2 class="mb-3 text-primary">Daftar Produk & Stok</h2>
<table class="table table-striped table-hover shadow-sm">
    <thead class="table-primary">
        <tr>
            <th>#</th>
            <th>Nama Produk</th>
            <th>Harga</th>
            <th>Stok</th>
            <th>Aksi</th>
        </tr>
    </thead>
    <tbody>
        <% produk.forEach((p, i) => { %>
        <tr>
            <td><%= i + 1 %></td>
            <td><%= p.nama_produk %></td>
            <td>Rp <%= p.harga.toLocaleString('id-ID') %></td>
            <td><%= p.jumlah %></td>
            <td>
                <a href="/cancel/<%= p.id %>" class="btn btn-outline-danger btn-sm">Cancel</a>
            </td>
        </tr>
        <% }) %>
    </tbody>
</table>
<a href="/pembelian" class="btn btn-success mt-3">+ Tambah Pembelian</a>
