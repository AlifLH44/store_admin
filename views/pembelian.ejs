<%- include('layout') %>
<div class="card shadow-sm">
    <div class="card-header bg-warning text-dark fw-bold">Input Pembelian Produk</div>
    <div class="card-body">
        <form action="/pembelian" method="POST">
            <div class="mb-3">
                <label class="form-label">Pilih Produk</label>
                <select name="produk_id" class="form-select" required>
                    <option value="">-- Pilih Produk --</option>
                    <% produk.forEach(p => { %>
                        <option value="<%= p.id %>"><%= p.nama_produk %> - Rp <%= p.harga.toLocaleString('id-ID') %></option>
                    <% }) %>
                </select>
            </div>
            <div class="mb-3">
                <label class="form-label">Jumlah</label>
                <input type="number" name="jumlah" min="1" class="form-control" required>
            </div>
            <div class="d-flex justify-content-between">
                <a href="/" class="btn btn-secondary">‚Üê Kembali</a>
                <button type="submit" class="btn btn-primary">Simpan Pembelian</button>
            </div>
        </form>
    </div>
</div>
